<%- include('includes/head.ejs', {username: username}) %>
<script src="https://cdn.tailwindcss.com"></script>
<h2 class="flex justify-center text-red-950 italic text-3xl py-3 hover:text-red-400 hover:text-4xl">Bienvenido </h2>
<form action="/users/login" method="POST" class="flex flex-col px-10">
    <label class="text-black bg-gray-500 rounded-lg font-montserrat px-10 py-4" for="username">Nombre</label>
    <input type="text" class="" id="username" name="username">
    <br><br>
    <label class="text-black bg-gray-500 rounded-lg font-montserrat px-10 py-4" for="password">Password</label>
    <input type="password" class="" id="password" name="password">
    <br><br>
    <input class="ring-3 rounded-md bg-purple-700 text-white" type="submit" value="Entrar">
</form>
<%- include('includes/foot.ejs') %>
